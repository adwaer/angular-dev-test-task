{
	"compileOnSave": false,
	"compilerOptions": {
		"paths": {
			"@bp/line-chart/models": ["libs/line-chart/models/src/index.ts"],
			"@bp/line-chart/services": ["libs/line-chart/services/src/index.ts"],
			"@domain/*": ["libs/weather-forecast/domain/*"],
			"@services/*": ["libs/weather-forecast/services/src/lib/*"]
		},
		"baseUrl": ".",
		"rootDir": ".",
		"target": "es2015",
		"module": "es2020",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom", "esnext", "esnext.asynciterable"],
		"types": ["node"],

		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noEmitHelpers": true,
		"noLib": false,
		"strictNullChecks": true,
		"sourceMap": true,
		"inlineSourceMap": false,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noErrorTruncation": true
	},
	"angularCompilerOptions": {
		"annotateForClosureCompiler": false,
		"disableTypeScriptVersionCheck": true,
		"fullTemplateTypeCheck": true,
		"strictTemplates": true,
		"strictInputAccessModifiers": true,
		"strictInjectionParameters": true,
		"annotationsAs": "decorators",
		"useUnknownInCatchVariables": false
	},
	"exclude": ["node_modules", "tmp", "dist"]
}
